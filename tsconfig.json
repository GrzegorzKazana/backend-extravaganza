{
    "compilerOptions": {
        "target": "es2018",
        "module": "CommonJS",
        "noImplicitAny": true,
        "strict": true,
        "strictNullChecks": true,
        "declaration": true,
        "outDir": "./esm",
        "sourceMap": true,
        "baseUrl": ".",
        "esModuleInterop": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "paths": {
            "@/*": ["src/*"]
        },
        "moduleResolution": "node"
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "tsconfig.json"]
}
